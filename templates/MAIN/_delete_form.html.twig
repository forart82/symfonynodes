{% if elements is iterable %}
	{% else %}
		{% if elements.id != null %}
			<form method="post" action="{{ path(className(elements)|lower~'_delete', {'id': elements.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
				<input type="hidden" name="_method" value="DELETE">
				<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ elements.id) }}">
				<button class="btnGlobal">{{'tDelete'|trans}}</button>
			</form>
		{% endif %}
{% endif %}
