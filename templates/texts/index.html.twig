{% extends 'base.html.twig' %}

{% block title %}Texts index{% endblock %}

{% block body %}
    <h1>Texts index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Uuid</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for text in texts %}
            <tr>
                <td>{{ text.id }}</td>
                <td>{{ text.uuid }}</td>
                <td>{{ text.content }}</td>
                <td>
                    <a href="{{ path('texts_show', {'id': text.id}) }}">show</a>
                    <a href="{{ path('texts_edit', {'id': text.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('texts_new') }}">Create new</a>
{% endblock %}
